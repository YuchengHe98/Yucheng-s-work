<%- include('../layout/header'); %>
<div class="container mb-5 pb-5">
    <%- include('../event/component'); %>
    <a href="/story/create/<%= event._id %>" class="btn btn-secondary btn-lg btn-block mt-1" role="button">Create a
        story</a>
    <div class="row mt-3">
        <% event.stories.forEach((story) => { %>
        <%- include('../story/component', {story: story}); %>
        <% }) %>
    </div>
</div>

<%- include('../layout/enlarge'); %>
<%- include('../layout/footer'); %>
